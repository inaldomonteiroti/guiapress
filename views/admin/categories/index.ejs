<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>  

<div class="container">
            <hr> 
            <h2>Categorias</h2>
            <a class="btn btn-success" href="/admin/categories/new"> Criar nova categoria </a>
            <hr>         
        
        <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titulo</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category => { %>
                        <tr>
                            <th scope="row"><%= category.id %></td>
                            <td><%= category.title %></td>
                            <td><%= category.slug %></td>
                            <td>
                                <a href="/admin/categories/edit/<%= category.id %>" class=" btn btn-warning"> Editar </a>
                                <form method="post" action="/categories/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                <button class=" btn btn-danger"> Deletar  </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>    
                    
                </tbody>
        </table>
            
         
  
</div>
<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Você quer deletar esta categoria ?");
        if(decision){
           form.submit();
        }else{
            console.log( "Não quero deletar, foi um acidente !");
        }
    }
</script>
